<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BigTextStyle">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:minWidth">220dp</item>
        <item name="android:maxWidth">220dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_black_edit_rect</item>
    </style>

</resources>