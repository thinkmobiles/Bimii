<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlineTextStyle">
        <item name="textStrokeWidth">5sp</item>
        <item name="textStrokeColor">@color/app_text_shadow_color</item>
    </style>

    <style name="SmallTextStyle" parent="OutlineTextStyle">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SmallTextStyleWifi" parent="OutlineTextStyle">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BigTextStyle" parent="OutlineTextStyle">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:minWidth">230dp</item>
        <item name="android:maxWidth">230dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_white_field</item>
        <item name="android:textColor">@color/app_night_sky_color</item>
        <item name="android:textColorHint">@color/app_hint_color</item>
    </style>

</resources>