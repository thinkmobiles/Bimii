<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Bluetooth dialog styles-->
    <style name="CloseButtonStyle">
        <item name="android:src">@drawable/round_close_x</item>
    </style>

    <style name="SettingsDialogStyle">
        <item name="android:background">@drawable/bg_downloading_game</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:minWidth">400dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="SettingsHeaderStyle" parent="OutlineTextStyle">
        <item name="android:textColor">@color/app_button_text_color</item>
        <item name="android:background">@drawable/bg_instellingen</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="SettingProgressBarStyle">
        <item name="android:padding">5dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progress_weel</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="SettingsStatusStyle">
        <item name="android:textColor">@color/app_night_sky_color</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="android:textColor">@drawable/selector_bimii_btn_text</item>
        <item name="android:background">@drawable/selector_bimii_btn_bg</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/popup_bg_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SettingsSwitchStyle">
        <item name="android:switchTextAppearance">@style/SwitchTextAppearance</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:textOn">@string/switch_on</item>
        <item name="android:textOff">@string/switch_off</item>
        <item name="android:textColor">@color/popup_bg_color</item>
        <item name="android:textColorHint">@color/popup_bg_color</item>
        <item name="android:checked">false</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>

    </style>

    <style name="SettingsCheckboxStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/download_text_color_progress</item>
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:enabled">false</item>
        <item name="android:checked">false</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
    </style>

    <style name="SettingsListStyle">
        <item name="android:divider">@color/table_divider_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingTop">40dp</item>
    </style>

    <!--Bluetooth list item styles-->
    <style name="BtIconStyle">
        <item name="android:src">@drawable/icn_bl</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="BtDeviceNameStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/app_night_sky_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginBottom">-9dp</item>
        <item name="android:layout_marginTop">-5dp</item>
    </style>

    <style name="BtDeviceStatusStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/app_button_text_color_pressed</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-9dp</item>
    </style>

    <!--Bluetooth unpair dialog styles-->
    <style name="BtUnpairMsgStyle">
        <item name="android:textColor">@color/app_night_sky_color</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="BtUnpaidButtonStyle">
        <item name="android:textColor">@drawable/selector_bimii_btn_text</item>
        <item name="android:background">@drawable/selector_bimii_btn_bg</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Wifi list item styles-->
    <style name="WfNetworkNameStyle">
        <item name="android:textSize">@dimen/wifi_network_name_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/wifi_network_name_margin_left</item>
    </style>

    <style name="WfNetworkStatusStyle">
        <item name="android:textSize">@dimen/wifi_network_status_text_size</item>
        <item name="android:typeface">normal</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginLeft">@dimen/wifi_network_status_margin_left</item>
    </style>

    <style name="WfSygnalStyle">
        <item name="android:layout_marginLeft">@dimen/wifi_sygnal_margin_left</item>
        <item name="android:layout_marginRight">@dimen/wifi_sygnal_margin_right</item>
    </style>

    <!--Wifi pass dialog styles-->
    <style name="WfPassDialogNetworkNameStyle">
        <item name="android:textSize">@dimen/wifi_pass_dialog_network_name_text_size</item>
        <item name="android:padding">@dimen/wifi_pass_dialog_network_name_padding</item>
        <item name="android:textColor">@color/app_night_sky_color</item>
    </style>

    <style name="WfPassDialogTvEnterPassStyle">
        <item name="android:typeface">normal</item>
        <item name="android:textSize">@dimen/wifi_pass_dialog_tv_enter_pass_text_size</item>
        <item name="android:textColor">@color/app_night_sky_color</item>
        <item name="android:layout_margin">@dimen/wifi_pass_dialog_tv_enter_pass_margin</item>
    </style>

    <style name="WfPassDialogEtStyle">
        <item name="android:minWidth">@dimen/wifi_pass_dialog_et_min_width</item>
        <item name="android:maxWidth">@dimen/wifi_pass_dialog_et_max_width</item>
        <item name="android:paddingBottom">@dimen/wifi_pass_dialog_et_padding_bottom</item>
        <item name="android:paddingTop">@dimen/wifi_pass_dialog_et_padding_top</item>
        <item name="android:paddingLeft">@dimen/wifi_pass_dialog_et_padding_left</item>
        <item name="android:paddingRight">@dimen/wifi_pass_dialog_et_padding_right</item>
        <item name="android:layout_marginTop">@dimen/wifi_pass_dialog_et_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/wifi_pass_dialog_et_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/wifi_pass_dialog_et_margin_left</item>
        <item name="android:layout_marginRight">@dimen/wifi_pass_dialog_et_margin_right</item>
        <item name="android:textSize">@dimen/wifi_pass_dialog_et_text_size</item>
        <item name="android:background">@drawable/bg_white_field</item>
        <item name="android:textColor">@color/app_night_sky_color</item>
        <item name="android:textColorHint">@color/app_hint_color</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="WfPassDialogCbStyle">
        <item name="android:textSize">@dimen/wifi_pass_dialog_checkbox_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/download_text_color_progress</item>
        <item name="android:button">@drawable/selector_checkbox_small</item>
        <item name="android:checked">false</item>
    </style>

    <style name="WfPassDialogBtnStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/selector_bimii_btn_text</item>
        <item name="android:background">@drawable/selector_bimii_btn_bg</item>
        <item name="android:layout_marginBottom">@dimen/wifi_pass_dialog_btn_margin_bottom</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!--Switch launcher dialog styles-->
    <style name="SwDialogCloseImageStyle">
        <item name="android:src">@drawable/selector_btn_x</item>
        <item name="android:layout_marginLeft">@dimen/wifi_switch_dialog_image_close_margin_left</item>
        <item name="android:layout_marginRight">@dimen/wifi_switch_dialog_image_close_margin_right</item>
    </style>

    <style name="SwDialogLauncherImageStyle">
        <item name="android:layout_marginTop">@dimen/wifi_switch_dialog_launcher_image_margin_top</item>
        <item name="android:duplicateParentState">true</item>
    </style>


</resources>