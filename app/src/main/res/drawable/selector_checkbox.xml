<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:left="@dimen/cb_bg_left_checked"
                  android:right="@dimen/cb_bg_right_checked"
                  android:top="@dimen/cb_bg_top_checked"
                  android:bottom="@dimen/cb_bg_bottom_checked">
                <shape android:shape="rectangle">
                    <size android:height="@dimen/cb_bg_shape_height_checked"
                          android:width="@dimen/cb_bg_shape_width_checked"/>
                    <stroke android:color="@color/app_night_sky_color"
                            android:width="@dimen/cb_bg_shape_stroke_width_checked"/>
                    <corners android:radius="@dimen/cb_bg_shape_corners_radius_checked"/>
                </shape>
            </item>
            <item android:drawable="@drawable/icn_choose"
                  android:gravity="center|bottom"
                  android:top="@dimen/cb_item_top_checked"
                  android:bottom="@dimen/cb_item_bottom_checked"
                  android:right="@dimen/cb_item_right_checked"
                  android:left="@dimen/cb_item_left_checked"/>
        </layer-list>
    </item>

    <item android:left="@dimen/cb_bg_left_unchecked"
          android:right="@dimen/cb_bg_right_unchecked"
          android:top="@dimen/cb_bg_top_unchecked"
          android:bottom="@dimen/cb_bg_bottom_unchecked">
        <layer-list>
            <item android:left="@dimen/cb_shape_left_unchecked"
                  android:right="@dimen/cb_shape_right_unchecked"
                  android:top="@dimen/cb_shape_top_unchecked"
                  android:bottom="@dimen/cb_shape_bottom_unchecked">
                <shape android:shape="rectangle">
                    <size android:height="@dimen/cb_shape_height_unchecked"
                          android:width="@dimen/cb_shape_width_unchecked"/>
                    <stroke android:color="@color/app_night_sky_color"
                            android:width="@dimen/cb_shape_stroke_width_unchecked"/>
                    <corners android:radius="@dimen/cb_shape_corners_radius_unchecked"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>