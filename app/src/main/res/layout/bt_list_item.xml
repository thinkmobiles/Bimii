<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp">

    <ImageView
        style="@style/BtIconStyle"
        android:id="@+id/ivIcon_BLI"
        android:layout_width="30dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/ivIcon_BLI">

        <TextView
            style="@style/BtDeviceNameStyle"
            android:id="@+id/tvDeviceName_BLI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DeviceName"/>

        <TextView
            style="@style/BtDeviceStatusStyle"
            android:id="@+id/tvDeviceStatus_BLI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>