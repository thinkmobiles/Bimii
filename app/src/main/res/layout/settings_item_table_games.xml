<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/selector_item_table"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGame_SITG"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@drawable/bg_night_circular"/>

        <TextView
            android:id="@+id/tvGame_SITG"
            style="@style/SmallTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="@string/game"
            android:textColor="@color/app_night_sky_item_table_color" />
    </LinearLayout>

    <include layout="@layout/divider_vertical"/>

    <TextView
        android:id="@+id/tvVersion_SITG"
        style="@style/SmallTextStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:text="@string/version"
        android:textColor="@color/app_night_sky_item_table_color" />

    <include layout="@layout/divider_vertical"/>

    <TextView
        android:id="@+id/tvAvailable_SITG"
        style="@style/SmallTextStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:text="@string/available"
        android:textColor="@color/app_night_sky_item_table_color" />

    <include layout="@layout/divider_vertical"/>

    <TextView
        android:id="@+id/tvAction_SITG"
        style="@style/SmallTextStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:text="@string/action"
        android:textColor="@color/app_button_text_color"
        android:textStyle="bold" />

</LinearLayout>